#ifndef ENEMY_H_
#define ENEMY_H_

struct Enemy{
	int x;
	int y;
	int speed;
	int lifetime;				// lifetime of the enemy, when it reaches a number, it will disappear
	unsigned char enemyType;
	int index;					// enemy index in enemy array
	int bulletType;
	int bulletSpeed;
	int actionFrame;					// action frame, 1 for play, 0 for not
	unsigned char actionLogic;	// action logic of the
	int collideSize;
	unsigned char HP;
};

struct EnemyType{
	int bulletType;
	int action;

};

void enext();


#endif
